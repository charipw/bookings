{{ template "base" . }}

{{ define "content" }}
<div class="container">
  <div id="main-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <ol class="carousel-indicators">
      <li data-bs-target="#main-carousel" data-bs-slide-to="0" class="active"></li>
      <li data-bs-target="#main-carousel" data-bs-slide-to="1"></li>
      <li data-bs-target="#main-carousel" data-bs-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="/static/images/home.jpg"
          class="d-block w-100"
          alt="Home seaview"
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Amazing seaview</h5>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="/static/images/cottage.jpg"
          class="d-block w-100"
          alt="Cottage outdoor"
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Lovely cottage</h5>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="/static/images/bike.jpg"
          class="d-block w-100"
          alt="Bathroom"
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Relaxing time</h5>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="text-center mt-4 mb-4">
          Welcome to Charleen's Bed & Breakfast
        </h1>
        <h4 class="text-center mt-4 mb-4 text-black-50">
          Come stay, enjoy and relax at our beautiful Bed & Brekfast located right in front of the sea in the charming Cornish village of Mitchell
        </h>
      </div>
    </div>

    <div class="row">
      <div class="col text-center mb-4">
        <a href="/search-availability" class="btn btn-success"
          >Book Now</a
        >
      </div>
    </div>
  </div>
</div>
{{ end }}
